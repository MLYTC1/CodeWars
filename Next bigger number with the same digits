def next_bigger(n):
    dig = list(str(n))
    leng = len(dig)
    
    for i in range(leng-2,-1,-1):
        if dig[i] < dig[i+1]:
            break
    else:
        return -1
    
    for j in range(leng-1,i,-1):
        if dig[j] > dig[i]:
            break
    
    dig[i], dig[j] = dig[j], dig[i]
    
    dig = dig[:i+1] + sorted(dig[i+1:])
    
    
    return int(''.join(dig))
    